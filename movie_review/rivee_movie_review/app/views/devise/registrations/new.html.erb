<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form row">
    <div class="form-content">
      <h2 class="display-4" style="margin-left:7rem;margin-bottom: 3rem;">Sign Up</h2>
      <div class="field">
        <div class="col-sm-6">
          <%= f.label :email,class:"col-sm-3 col-form-label" %>
          <%= f.email_field :email,autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-sm-6">
          <%= f.label :password,class:"col-sm-3 col-form-label" %>
          
          <%= f.password_field :password,autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>      
      <div class="field">
        <div class="col-sm-6">
          <%= f.label :password_confirmation,class:"col-sm-3 col-form-label" %>
          <%= f.password_field :password_confirmation,autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Sign Up",class:"btn btn-primary form-button" %>
      </div>
    </div>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>

