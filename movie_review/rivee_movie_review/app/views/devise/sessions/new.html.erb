<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form row">
    <div class="form-content">
      <h2 class="display-4" style="margin-left:7rem;margin-bottom: 3rem;">Log in</h2>
      <div class="field">
        <div class="col-sm-6">
          <%= f.label :email,class:"col-sm-3 col-form-label" %>
          <%= f.email_field :email,autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-sm-6">
          <%= f.label :password,class:"col-sm-3 col-form-label" %>
          <%= f.password_field :password,autocomplete: "current-password",class:"form-control" %>
        </div>
      </div>
      <!--<% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="col-sm-6">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,class:"col-sm-3 col-form-label" %>
          </div>
        </div>
      <% end %>-->
      <div class="actions">
        <%= f.submit "Log in",class:"btn btn-primary form-button" %>
      </div>
      <div class="field">
        <div class="col-sm-6">
          <br><br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
   <%= render "devise/shared/error_messages", resource: resource %>
<% end %>


